@page "/"
@page "/products"
@using PShop.NGUOIDUNG.SearchProductScreen
@using GIAODIENCHUNG
@using THONGTINDONHANG
@using THONGTINDONHANG.Controls
@using PShop.COTLOI.Models
@inject ITimKiemSP searchProduct

<h3 class="text-center" style="font-size: 3em; font-family: 'Times New Roman', Times, serif, sans-serif;">Chào mừng đến với PShop Jewelry</h3>
<h3 class="text-center" style="font-size: 3em; font-family: 'Times New Roman', Times, serif, sans-serif;">Thiên đường của trang sức tinh tế và sang trọng!</h3>
<br/>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://cdn.pnj.io/images/promo/214/Tabsale_D-DAY1972x640-cta.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://cdn.pnj.io/images/promo/214/02-lp_ngaydoi77-1972x640-CTA.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://cdn.pnj.io/images/promo/196/egift-t12-23-1972x640CTA.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br />
<br />
<h3 class="text-center" style="font-size: 3em; font-family: 'Times New Roman', Times, serif, sans-serif;">Tìm Kiếm Sản Phẩm</h3>
<br />
<ThanhTimKiem OnSearch="HandleSearch"></ThanhTimKiem>
<br />

@if (products != null && products.Count()>0)
{
    <div class="row">
        @foreach(var product in products)
        {
           <ThanhPhanTheSP product ="product"></ThanhPhanTheSP>
        }
    </div>
}
else
{
    <text>
        Không tìm thấy sản phẩm.
    </text>
}


@code {
    private IEnumerable<Product> products;
    private string filter_sample;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        products = searchProduct.Execute(null);
    }

    private void HandleSearch(string filter)
    {
        products = searchProduct.Execute(filter);
        this.filter_sample = filter;
    }
}
<br/>
